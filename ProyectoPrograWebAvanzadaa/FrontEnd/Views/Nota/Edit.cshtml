@model FrontEnd.Models.NotaViewModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout_System.cshtml";
}

<h1>Editar el registro de nota seleccionado:</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(model => model.IdNota)

            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <input asp-for="IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTarea" class="control-label"></label>
                <input asp-for="IdTarea" class="form-control" />
                <span asp-validation-for="IdTarea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NotaTarea" class="control-label"></label>
                <input asp-for="NotaTarea" class="form-control" />
                <span asp-validation-for="NotaTarea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>


